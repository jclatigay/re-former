<%= form_with model: @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, placeholder: "Enter your username here" %>

  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "Enter your email here" %>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "Enter your password here" %>

  <%= f.submit %>
<% end %>
